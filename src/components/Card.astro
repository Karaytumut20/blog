---
export interface Props {
  title: string;
  author: string;
  stars: number;
  description: string;
  price: number | null;
  imageUrl: string;
  url: string;
}

const { title, author, stars, description, price, imageUrl, url } = Astro.props;
---

<div class="card">
  <div class="card-content">
    <img src={imageUrl} alt={title} class="card-image" />
    <h2 class="card-title">{title}</h2>
    <p class="card-author">{author}</p>
    <p class="card-stars">‚≠ê {stars}</p>
    <p class="card-description">{description}</p>
    <p class="card-price">{price ? `$${price.toFixed(2)}` : 'Price not available'}</p>
    <a href={url} class="card-link">View More</a>
  </div>
</div>

<style>
  .card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-radius: 16px;
    padding: 20px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
    cursor: pointer;
  }

  .card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.6);
  }

  .card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 20px;
  }

  .card-title {
    font-size: 1.6rem;
    color: #e3e3e3;
    margin: 10px 0;
    text-align: center;
  }

  .card-author {
    color: #c1c1c1;
    font-size: 1rem;
    margin-bottom: 10px;
  }

  .card-stars {
    color: #ffc700;
    font-size: 1.1rem;
    margin-bottom: 10px;
  }

  .card-description {
    font-size: 1rem;
    color: #bbb;
    margin-bottom: 20px;
    text-align: center;
  }

  .card-price {
    font-weight: bold;
    color: #03dac5;
    margin-bottom: 20px;
  }

  .card-link {
    display: inline-block;
    padding: 12px 24px;
    background: linear-gradient(135deg, #6200ea, #bb86fc);
    color: #ffffff;
    text-decoration: none;
    border-radius: 8px;
    transition: background 0.3s ease;
  }

  .card-link:hover {
    background: linear-gradient(135deg, #bb86fc, #6200ea);
  }
</style>
